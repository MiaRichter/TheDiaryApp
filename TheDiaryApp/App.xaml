<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TheDiaryApp"
             xmlns:y="clr-namespace:TheDiaryApp.Converters"
             x:Class="TheDiaryApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Регистрация конвертера -->
            <y:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <!-- Цвета для выделения сегодняшнего дня -->
            <Color x:Key="TodayLightColor">#3d9f8d</Color>
            <Color x:Key="TodayDarkColor">#46436e</Color>
            <Color x:Key="TodayTextLightColor">#000000</Color>
            <Color x:Key="TodayTextDarkColor">#FFFFFF</Color>
            <Color x:Key="Primary">#0070BA</Color>
            <Color x:Key="Secondary">#FF424D</Color>
            <Color x:Key="DarkOnLightBackground">#333333</Color>
            <Color x:Key="LightOnDarkBackground">#FFFFFF</Color>
            <Color x:Key="PlaceholderLight">#808080</Color>
            <Color x:Key="PrimaryDark">#00508A</Color>
            <Color x:Key="SecondaryDark">#CC2A36</Color>
            <Color x:Key="PlaceholderDark">#A0A0A0</Color>
            <Color x:Key="EntryLineLight">#333333</Color>
            <Color x:Key="EntryLineDark">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
