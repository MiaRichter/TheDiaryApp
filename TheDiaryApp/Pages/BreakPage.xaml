<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheDiaryApp.Pages.BreakPage"
             Title="Расписание перемен">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Заголовок -->
        <Label FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center">
            <Label.TextColor>
                <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                 Dark="{StaticResource LightOnDarkBackground}" />
            </Label.TextColor>
        </Label>

        <!-- Текущее время -->
        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">
            <Label x:Name="CurrentTimeLabel"
                   Text="Текущее время: "
                   FontSize="18"
                   HorizontalOptions="Center">
                <Label.TextColor>
                    <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                     Dark="{StaticResource LightOnDarkBackground}" />
                </Label.TextColor>
            </Label>
        </Frame>

        <!-- Время пары -->
        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">
            <Label x:Name="LessonTimeLabel"
                   Text="Пара: "
                   FontSize="18"
                   HorizontalOptions="Center">
                <Label.TextColor>
                    <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                     Dark="{StaticResource LightOnDarkBackground}" />
                </Label.TextColor>
            </Label>
        </Frame>

        <!-- Время перемены -->
        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">
            <Label x:Name="BreakTimeLabel"
                   Text="Перемена: "
                   FontSize="18"
                   HorizontalOptions="Center">
                <Label.TextColor>
                    <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                     Dark="{StaticResource LightOnDarkBackground}" />
                </Label.TextColor>
            </Label>
        </Frame>

        <!-- Длительность перемены -->
        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">
            <Label x:Name="BreakDurationLabel"
                   Text="Длительность перемены: "
                   FontSize="18"
                   HorizontalOptions="Center">
                <Label.TextColor>
                    <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                     Dark="{StaticResource LightOnDarkBackground}" />
                </Label.TextColor>
            </Label>
        </Frame>

        <!-- Статус перемены -->
        <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">
            <Label x:Name="BreakStatusLabel"
                   Text="Статус перемены: "
                   FontSize="18"
                   HorizontalOptions="Center">
                <Label.TextColor>
                    <AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                     Dark="{StaticResource LightOnDarkBackground}" />
                </Label.TextColor>
            </Label>
        </Frame>

    </VerticalStackLayout>
</ContentPage>