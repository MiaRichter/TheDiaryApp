<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TheDiaryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TheDiaryApp"
    xmlns:pages="clr-namespace:TheDiaryApp.Pages"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    Shell.FlyoutBehavior="Flyout"
    Title="TheDiaryApp">

    <ShellContent
        Title="Расписание"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Настройки"
    ContentTemplate="{DataTemplate pages:SettingsPage}"
    Route="SettingsPage" />
</Shell>