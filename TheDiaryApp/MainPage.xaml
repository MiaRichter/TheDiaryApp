<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheDiaryApp.MainPage">

	<RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
		<RefreshView.RefreshColor>
			<AppThemeBinding Light="{StaticResource Primary}"
                             Dark="{StaticResource PrimaryDark}" />
		</RefreshView.RefreshColor>

		<ScrollView>
			<VerticalStackLayout Spacing="10" Padding="10">

				<!-- Отображение расписания -->
				<StackLayout BindableLayout.ItemsSource="{Binding Schedule.WeekData}">
					<BindableLayout.ItemTemplate>
						<DataTemplate>
							<VerticalStackLayout Spacing="5">

								<!-- Неделя -->
								<Label Text="{Binding Key}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       Margin="0,10,0,5">
									<Label.TextColor>
										<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                         Dark="{StaticResource LightOnDarkBackground}" />
									</Label.TextColor>
								</Label>

								<!-- Дни недели -->
								<StackLayout BindableLayout.ItemsSource="{Binding Value}">
									<BindableLayout.ItemTemplate>
										<DataTemplate>
											<VerticalStackLayout Spacing="5">

												<!-- День недели -->
												<Label Text="{Binding Key}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       Margin="10,5,0,0">
													<Label.TextColor>
														<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                                         Dark="{StaticResource LightOnDarkBackground}" />
													</Label.TextColor>
												</Label>

												<!-- Пары -->
												<StackLayout BindableLayout.ItemsSource="{Binding Value}">
													<BindableLayout.ItemTemplate>
														<DataTemplate>
															<Frame Padding="10"
                                                                   CornerRadius="5"
                                                                   Margin="10,0,10,5">
																<Frame.BackgroundColor>
																	<AppThemeBinding Light="{StaticResource LightSecondaryBackground}"
                                                                                     Dark="{StaticResource DarkSecondaryBackground}" />
																</Frame.BackgroundColor>
																<Grid ColumnDefinitions="30*,70*"
                                                                      RowDefinitions="*,*,*">

																	<!-- Номер пары -->
																	<Label Text="{Binding LessonNumber}"
                                                                           FontAttributes="Bold"
                                                                           FontSize="16"
                                                                           VerticalOptions="Center"
                                                                           Grid.Column="0"
                                                                           Grid.RowSpan="3">
																		<Label.TextColor>
																			<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                                                             Dark="{StaticResource LightOnDarkBackground}" />
																		</Label.TextColor>
																	</Label>

																	<!-- Предмет -->
																	<Label Text="{Binding Subject}"
                                                                           FontSize="14"
                                                                           Grid.Column="1"
                                                                           Grid.Row="0">
																		<Label.TextColor>
																			<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                                                             Dark="{StaticResource LightOnDarkBackground}" />
																		</Label.TextColor>
																	</Label>

																	<!-- Преподаватель -->
																	<Label Text="{Binding Teacher}"
                                                                           FontSize="12"
                                                                           Grid.Column="1"
                                                                           Grid.Row="1">
																		<Label.TextColor>
																			<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                                                             Dark="{StaticResource LightOnDarkBackground}" />
																		</Label.TextColor>
																	</Label>

																	<!-- Аудитория -->
																	<Label Text="{Binding Room}"
                                                                           FontSize="12"
                                                                           Grid.Column="1"
                                                                           Grid.Row="2">
																		<Label.TextColor>
																			<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                                                                             Dark="{StaticResource LightOnDarkBackground}" />
																		</Label.TextColor>
																	</Label>
																</Grid>
															</Frame>
														</DataTemplate>
													</BindableLayout.ItemTemplate>
												</StackLayout>
											</VerticalStackLayout>
										</DataTemplate>
									</BindableLayout.ItemTemplate>
								</StackLayout>
							</VerticalStackLayout>
						</DataTemplate>
					</BindableLayout.ItemTemplate>
				</StackLayout>

				<!-- Сообщение при отсутствии данных -->
				<Label Text="Расписание не найдено"
                       IsVisible="{Binding IsEmpty}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="20">
					<Label.TextColor>
						<AppThemeBinding Light="{StaticResource DarkOnLightBackground}"
                                         Dark="{StaticResource LightOnDarkBackground}" />
					</Label.TextColor>
				</Label>
			</VerticalStackLayout>
		</ScrollView>
	</RefreshView>
</ContentPage>